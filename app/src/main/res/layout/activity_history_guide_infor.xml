<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    >
    <TextView
        android:text="返回"
        android:id="@+id/tv_history_guide_withdraw"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:textColor="#0f0e0e"
        android:layout_marginTop="10dp"
        android:onClick="back"
        android:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_main"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="80dp"
        android:background="#1e000000"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_history_guide_head_ic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/default_ic"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/IV_image5"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="用户名:"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/et_history_guide_user_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                style="?android:attr/textViewStyle"

                android:imeOptions="actionDone"
                android:textSize="16sp"

                android:ems="10"
                android:cursorVisible="false"
                android:editable="false"
                android:inputType="none"
                android:textIsSelectable="false"

                >
            </EditText>


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="#00000000"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/IV_image4"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="星级："
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/et_history_guide_star"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                style="?android:attr/textViewStyle"

                android:imeOptions="actionDone"
                android:textSize="16sp"

                android:ems="10"
                android:cursorVisible="false"
                android:editable="false"
                android:inputType="none"
                android:textIsSelectable="false"

                >
            </EditText>


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="20dp"
            android:layout_height="44dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/IV_image3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="城市:"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/et_history_guide_city"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:background="@null"
                style="?android:attr/textViewStyle"
                android:imeOptions="actionDone"
                android:textSize="16sp"
                android:ems="10"

                android:cursorVisible="false"
                android:editable="false"
                android:inputType="none"
                android:textIsSelectable="false"
                >
            </EditText>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/IV_image2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="电话："
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/et_history_guide_phone"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                style="?android:attr/textViewStyle"
                android:imeOptions="actionDone"
                android:cursorVisible="false"
                android:editable="false"

                android:textIsSelectable="false"
                android:textSize="16sp"
                android:ems="10"



                >
            </EditText>


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/IV_image1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="备注:"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/et_history_guide_description"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                style="?android:attr/textViewStyle"
                android:imeOptions="actionDone"
                android:textSize="16sp"
                android:ems="10"
                android:cursorVisible="false"
                android:editable="false"
                android:inputType="none"
                android:textIsSelectable="false"

                >
            </EditText>


        </LinearLayout>



    </LinearLayout>
    <Button
        android:id="@+id/btn_user_accepted_order_guide_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_marginTop="50dp"
        android:background="#3aadfd"
        android:text="导 游 详 情"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"/>


</RelativeLayout>
