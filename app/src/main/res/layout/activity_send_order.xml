<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout          xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/bg3"
    >
<TextView
    android:text="返回"
    android:id="@+id/tv_send_order_withdraw"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content"
    android:textColor="#0f0e0e"
    android:layout_marginTop="10dp"
    android:textSize="18sp"
    />
<TextView
    android:text="        完成您的订单"
    android:layout_below="@+id/tv_withdraw"
    android:id="@+id/tv_main"
    android:layout_width="wrap_content"
    android:textStyle="bold"

    android:layout_height="wrap_content"
    android:textColor="#ae120f0f"
    android:layout_marginTop="40dp"
    android:textSize="28sp"/>
<TextView
    android:text="                   ——  开始您的私人旅行定制"
    android:layout_below="@+id/tv_main"
    android:id="@+id/tv_main2"
    android:layout_width="wrap_content"
    android:textStyle="normal"

    android:layout_height="wrap_content"
    android:textColor="#ae120f0f"
    android:layout_marginTop="8dp"
    android:textSize="15sp"/>




<LinearLayout
    android:id="@+id/input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_main2"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="28dp"
    android:layout_marginTop="80dp"
    android:background="#1e000000"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/loginbutton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:src="@drawable/y2"/>

        <EditText
            android:id="@+id/et_send_order_location"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            style="?android:attr/textViewStyle"

            android:imeOptions="actionDone"
            android:textSize="16sp"

            android:ems="10"
            android:cursorVisible="false"
            android:editable="false"
            android:inputType="none"
            android:textIsSelectable="false"
            android:hint="请设置您的目的地"
            >
        </EditText>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="20dp"
        android:layout_height="44dp"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_image1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:src="@drawable/y3"/>

        <EditText
            android:id="@+id/et_send_order_date"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"

            android:background="@null"
            style="?android:attr/textViewStyle"
            android:imeOptions="actionDone"
            android:textSize="16sp"
            android:ems="10"
            android:hint="请设置您的开始时间"
            android:cursorVisible="false"
            android:editable="false"
            android:inputType="none"
            android:textIsSelectable="false"
            >
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_image3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:src="@drawable/y7"
            />

        <EditText
            android:id="@+id/et_send_order_people_num"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            style="?android:attr/textViewStyle"
            android:imeOptions="actionDone"
            android:textSize="16sp"
            android:ems="10"
            android:inputType="number"
            android:hint="请设置您的同行人数"

            >
        </EditText>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_image4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:src="@drawable/y5"/>

        <EditText
            android:id="@+id/et_send_order_description"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            style="?android:attr/textViewStyle"
            android:imeOptions="actionDone"
            android:textSize="16sp"
            android:ems="10"
            android:hint="备注(您想去的景点,或其他特殊要求)"
            >
        </EditText>


    </LinearLayout>



</LinearLayout>
<Button
    android:id="@+id/btn_send_order_send"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/input"
    android:layout_marginTop="50dp"
    android:background="#3aadfd"
    android:text="提 交 订 单"
    android:textColor="#ffffff"
    android:textSize="18dp"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="28dp"/>


</RelativeLayout>
