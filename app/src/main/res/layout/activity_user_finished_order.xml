<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout          xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    >
    <TextView
        android:text="返回"
        android:id="@+id/tv_user_finished_order_withdraw"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:textColor="#0f0e0e"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>
    <TextView
        android:text="您的订单详情"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/tv_withdraw"
        android:id="@+id/tv_main"
        android:layout_width="wrap_content"
        android:textStyle="bold"

        android:layout_height="wrap_content"
        android:textColor="#ae120f0f"
        android:layout_marginTop="5dp"
        android:textSize="28sp"/>




    <LinearLayout
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_main"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="20dp"
        android:background="#1e000000"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/IV_image5"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="订单ID:"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/et_user_finished_order_order_ID"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                style="?android:attr/textViewStyle"

                android:imeOptions="actionDone"
                android:textSize="16sp"

                android:ems="10"
                android:cursorVisible="false"
                android:editable="false"
                android:inputType="none"
                android:textIsSelectable="false"

                >
            </EditText>


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="#00000000"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/IV_image4"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="目的地:"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/et_user_finished_order_destination"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                style="?android:attr/textViewStyle"

                android:imeOptions="actionDone"
                android:textSize="16sp"

                android:ems="10"
                android:cursorVisible="false"
                android:editable="false"
                android:inputType="none"
                android:textIsSelectable="false"

                >
            </EditText>


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="20dp"
            android:layout_height="44dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/IV_image3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="时间:"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/et_user_finished_order_start_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:background="@null"
                style="?android:attr/textViewStyle"
                android:imeOptions="actionDone"
                android:textSize="16sp"
                android:ems="10"

                android:cursorVisible="false"
                android:editable="false"
                android:inputType="none"
                android:textIsSelectable="false"
                >
            </EditText>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/IV_image2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="人数："
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/et_user_finished_order_order_people"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                style="?android:attr/textViewStyle"
                android:imeOptions="actionDone"
                android:cursorVisible="false"
                android:editable="false"

                android:textIsSelectable="false"
                android:textSize="16sp"
                android:ems="10"



                >
            </EditText>


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/IV_image1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="备注:"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/et_user_finished_order_remark"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                style="?android:attr/textViewStyle"
                android:imeOptions="actionDone"
                android:textSize="16sp"
                android:ems="10"
                android:cursorVisible="false"
                android:editable="false"
                android:inputType="none"
                android:textIsSelectable="false"

                >
            </EditText>


        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/IV_image"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="导游:"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/et_user_finished_order_guide_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                style="?android:attr/textViewStyle"
                android:imeOptions="actionDone"
                android:textSize="16sp"
                android:ems="10"
                android:cursorVisible="false"
                android:editable="false"
                android:inputType="none"
                android:textIsSelectable="false"

                >
            </EditText>
            <Button
                android:id="@+id/btn_user_finished_order_guide_information"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="@null"
                android:textStyle="bold"
                style="?android:attr/textViewStyle"
                android:imeOptions="actionDone"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:ems="10"
                android:cursorVisible="false"
                android:editable="false"
                android:inputType="none"
                android:textIsSelectable="false"
                android:text="导游信息"
                >
            </Button>


        </LinearLayout>



    </LinearLayout>


</RelativeLayout>
