<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/ll_guide_information"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <EditText
        android:id="@+id/et_guide_information_real_name"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:hint="姓名："/>

    <EditText
        android:id="@+id/et_guide_information_ID"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:hint="身份证号："/>

    <EditText
        android:id="@+id/et_guide_information_Guide_ID"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:hint="导游证号："/>

    <EditText
        android:id="@+id/et_guide_information_city"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:hint="服务城市："/>
    <EditText
        android:id="@+id/et_guide_information_star"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:hint="服务星级："/>



<Button
        android:id="@+id/btn_change_information_update"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:textColor="#ff8c6a"
        android:background="@drawable/button_shape"/>
    </LinearLayout>

