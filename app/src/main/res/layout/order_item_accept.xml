<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_Adapter"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#ffffffff"
        >


        <ImageView
            android:id="@+id/order_item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/logotemp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/order_item_image1"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:src="@drawable/t1" />

                <TextView

                    android:id="@+id/order_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/order_item_image1"
                    android:text="成都市"
                    android:textSize="28sp"
                    android:textColor="#000000"
                    />

                <TextView

                    android:id="@+id/order_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/order_item_title"
                    android:text="导游已接单"
                    android:textSize="12sp"
                    android:textColor="#027b39"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/order_item_date"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="30dp"
                    android:text="2018/8/15"
                    android:textSize="18sp" />

                <Button
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/btn_sign_up1"
                    android:layout_width="65dp"
                    android:layout_height="28dp"
                    android:layout_toRightOf="@+id/order_item_date"
                    android:color="#f18a29"
                    android:background="@drawable/buttonshape"
                    android:text="选择导游"
                    android:textColor="#f18a29"
                    android:textSize="13dp"
                    android:layout_centerHorizontal="true"
                    android:onClick="choose_guide"
                    />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>